<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ema.myshop.Profile"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="340dp"
    >
    <ListView
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </ListView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/mydata"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="My id : "
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/MyID"
                    android:layout_width="0px"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:gravity="center"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="My Name : "
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/MyName"
                    android:layout_width="0px"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:gravity="center"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="My Phone : "
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/MyEmail"
                    android:layout_width="0px"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:gravity="center"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Shop name : "
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/MyShop"
                    android:layout_width="0px"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:text="Shop name"
                    android:gravity="center"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Location : "
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/MyLocation"
                    android:layout_width="0px"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:gravity="center"
                    android:textSize="20sp"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <Button
            android:id="@+id/Mback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cir"
            android:textColor="@android:color/white"
            android:text="Back"/>
        <Button
            android:id="@+id/received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cir"
            android:textColor="@android:color/white"
            android:text="Recived"/>
        <Button
            android:id="@+id/sented"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cir"
            android:textColor="@android:color/white"
            android:text="Sented"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:gravity="center">
    <Button
        android:id="@+id/mydatabtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cir"
        android:textColor="@android:color/white"
        android:text="My data"
        android:layout_gravity="center"/>
    <Button
        android:onClick="savedd"
        android:id="@+id/myedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cir"
        android:textColor="@android:color/white"
        android:text="Save"
        android:layout_marginLeft="10dp"/>

    </LinearLayout>
</LinearLayout>
