<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ema.myshop.product"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/showproductpic"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/state"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/showproductname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nestle water"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/showproductdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pure life   .....   Description Description Description Description "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salary"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/showproductsalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="70 $"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Owner By"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/showproductowner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="shopahmed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="available untill"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/showproductTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15 - 7 - 2016"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="phone"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/showproductphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01099982714" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/showproductcomments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="جيدة جدا لكن سريعة التلف
                 \n\n
                  العبوات غير كاملة"/>
        </LinearLayout>

    </ScrollView>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#4052b5"
                    android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <LinearLayout
                    android:onClick="searchact"
                    android:id="@+id/unsearch"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >
                    <Button
                        android:onClick="searchact"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/search"/>
                    <TextView
                        android:onClick="searchact"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Search"
                        android:gravity="center"/>
                </LinearLayout>


                <LinearLayout
                    android:onClick="callact"
                    android:id="@+id/hiscall"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >
                    <Button
                        android:onClick="callact"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/call"/>
                    <TextView
                        android:onClick="callact"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="call"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/hismessage"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:onClick="messageact"
                    >
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/chat"
                        android:onClick="messageact"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Message"
                        android:onClick="messageact"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/hiscomment"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:onClick="commentact"
                    >
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:onClick="commentact"
                        android:background="@drawable/comment"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="comment"
                        android:onClick="commentact"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/hisshare"
                    android:layout_marginLeft="10dp"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:onClick="shareact"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/share"
                        android:onClick="shareact"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Share"
                        android:gravity="center"
                        android:onClick="shareact"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/hisprofile"
                    android:layout_marginLeft="10dp"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:onClick="profileact"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/myprof"
                        android:onClick="profileact"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_marginLeft="-1dp"
                        android:layout_width="70dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="His shop"
                        android:gravity="center"
                        android:onClick="profileact"
                        />
                </LinearLayout>


                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/unloginlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/untoin"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:onClick="loginact"
                        >
                        <Button
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:onClick="loginact"
                            android:background="@drawable/login"/>
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Login"
                            android:onClick="loginact"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/untoreg"
                        android:layout_marginLeft="50dp"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:onClick="unloginact"
                        android:orientation="vertical">
                        <Button
                            android:layout_width="40dp"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:background="@drawable/signup"
                            android:onClick="unloginact"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Sign Up"
                            android:onClick="unloginact"
                            android:background="#39ffffff"/>
                    </LinearLayout>
                </LinearLayout>



                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>


</LinearLayout>
