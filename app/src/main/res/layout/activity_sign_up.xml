<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ema.traint_ag.SignUp"
    android:background="@drawable/mycolor">
<TextView
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/singupupspp"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/signup_lay"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/singupupspp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
     >
        <EditText
            android:id="@+id/signup_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Enter Your Phone"
            android:background="#0000"
            android:inputType="phone"
            android:layout_marginBottom="20dp"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/signup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Enter Your Username"
            android:background="#0000"
            android:inputType="textPersonName"
            android:layout_marginBottom="20dp"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/signup_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Enter Your password"
            android:background="#0000"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/signup_passcf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Re-Enter password"
            android:background="#0000"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/signup_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Shop Name"
            android:background="#0000"
            android:layout_marginBottom="20dp"
            android:textSize="25dp"/>

    </LinearLayout>

</ScrollView>
    <RelativeLayout
        android:id="@+id/signup_line"
        android:layout_below="@+id/signup_lay"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000">

    </RelativeLayout>
    <Button
        android:onClick="signup_shop"
        android:id="@+id/signup_signup"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:background="@drawable/cir"
        android:layout_below="@+id/signup_line"
        android:layout_marginTop="30dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:onClick="signup_user"
        android:id="@+id/signup_signup_user"
        android:text="Sign User"
        android:textColor="@android:color/white"
        android:typeface="serif"
        android:background="@drawable/cir"
        android:layout_below="@+id/signup_line"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/signup_signup"
        android:layout_marginTop="30dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/signup_signin"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/signup_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:text="SIGN IN"/>

    <Button
        android:id="@+id/signup_home"
        android:layout_alignParentBottom="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/leftbutton"
        android:layout_gravity="left"/>

</RelativeLayout>
