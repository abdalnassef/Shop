<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ema.myshop.otherprofiles"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/hisname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Name"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/hisphone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="phone number"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            android:layout_marginTop="40dp"

            >
    <ListView
        android:id="@+id/hisproducts"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:entries="@array/test"
        />
        <TextView
            android:visibility="invisible"
            android:id="@+id/notfound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Not Founded"
            android:gravity="center"
            android:textSize="40sp"
            android:typeface="serif"
            />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/unsearch"
                android:onClick="searchingmethod"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                >
                <Button
                    android:onClick="searchingmethod"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/search"/>
                <TextView
                    android:onClick="searchingmethod"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Search"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:onClick="calling"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                >
                <Button
                    android:onClick="calling"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/call"/>
                <TextView
                    android:onClick="calling"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Call"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/MSG"
                android:onClick="messaging"
                android:layout_marginRight="50dp"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:onClick="messaging"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/chat"
                    android:layout_gravity="center"/>
                <TextView
                    android:onClick="messaging"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Message"
                    android:background="#39ffffff"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>
