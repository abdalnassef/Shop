<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ema.traint_ag.Forgot_pass"
    android:gravity="center"
    android:background="@drawable/mycolor">

        <ImageView
            android:layout_marginTop="40dp"
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="35dp"/>

        <ImageView
            android:layout_marginTop="-40dp"
            android:id="@+id/scroll"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="330dp"
            android:padding="25dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/content"
            />
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_alignTop="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <EditText
                android:id="@+id/email"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Email"
                android:background="#00000000"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="12dp"
                />

            <RelativeLayout
                android:layout_margin="20dp"
                android:layout_below="@+id/email"
                android:id="@+id/a"
                android:layout_centerHorizontal="true"
                android:layout_width="200dp"
                android:layout_height="0.5dp"
                android:background="#c1c1c1"
                android:layout_marginTop="5dp"
                >

            </RelativeLayout>

            <TextView
                android:layout_below="@+id/a"
                android:layout_centerHorizontal="true"
                android:id="@+id/passforget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check your Email after click send"
                android:textColor="#000"
                android:textSize="12dp"/>

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="-40dp"
            android:id="@+id/icon"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/group1"/>

        <Button
            android:id="@+id/send"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/cir"
            android:textColor="@android:color/white"
            android:text="Send"
            android:typeface="serif"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/scroll"
            android:layout_marginTop="-50dp" />

        <ImageView
            android:id="@+id/home"
            android:layout_alignParentBottom="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/leftbutton"/>



</RelativeLayout>
